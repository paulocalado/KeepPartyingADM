<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/cardDetalhePedido"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            >

            <TextView
                android:id="@+id/txtTotalProdutoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtNomeProdutoDetalhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp" />
            <TextView
                android:id="@+id/txtValorProdutoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/txtNomeProdutoPedido"
                android:layout_alignStart="@+id/txtNomeProdutoPedido" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
